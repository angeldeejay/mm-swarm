# Override args
FROM karsten13/magicmirror:fat

WORKDIR /opt/magic_mirror
USER root
ENV DEBIAN_FRONTEND=noninteractive

RUN set -e; \
    apt-get update; \
    apt-get install \
    ffmpeg \
    mkcert; \
    npm install npm@latest -g;

USER node
COPY --chown=node:node entrypoint-mm.sh .

EXPOSE 8080

ENTRYPOINT ["./entrypoint-mm.sh"]